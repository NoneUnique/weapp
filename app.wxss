/**app.wxss**/
.container {
  height: 100%;
  box-sizing: border-box;
  margin: 15px;
  margin-top: 0;
} 

/**人物图片**/
.img-person{
  width: 250rpx;
  height: 300rpx;
}
/**滑动图**/
.person-intro{
  width: 100%;
  height: 400rpx;
  display: flex;
  white-space: nowrap;
}
.person{
  width: 280rpx;
  display: inline-block;
}
/**评论头像**/
.review-icon{
  width: 90rpx;
  height: 90rpx;
  border-radius: 50%;
}
/**评论内容**/
.user-name {
  font-size: 32rpx;
  font-weight: bold;
  color: #de4c1c;
}
.created-time{
  font-size: 24rpx;
  padding-left: 15rpx;
  color: #BBBBBB;
}
.comments {
  position: relative;
}
.avatar-img {
  z-index: 2;
  position: absolute;
  top: 35rpx;
  left: -10px;
}

.comment-body {
  padding: 25rpx 0 20rpx 100rpx;
  color: #696a52;
  border-bottom:1px solid #ccc;
}
/**标题**/
.content-head{
  width: 100%;
  margin-bottom: 15px;
  margin-top: 25px;
  border-bottom: 1px solid #bbb;
}
.content-head text{
  border-bottom: 1px solid rgb(45, 228, 252);
}
