/**隐藏显示**/
.hide{
 display: -webkit-box;
}
.hideList{
  display: none;
}
.show{
 display: block;
}
/**电影列表**/
.movie-list{
  width: 100%;
}
.movie-item{
  padding: 5px;
  display: flex;
  border-radius: 5%;
  align-items:center;
  margin-bottom:25px;
  /* box-shadow: 1px  3px 3px #ccaacc; */
}
.img{
  width: 33%;
  flex: 3;
  height: 150px;
}
.img image{
  width: 100%;
  border-radius: 5%;
  height: 100%;
  /* box-shadow: 1px  3px 3px #ccaacc; */
}
.info{
  flex: 6;
  font-size: 32rpx;
  padding-left: 25rpx;
}
.score{
  font-size: 30px;
  color: #f17814c4;
}
.director:first-child::before{
  content: '导演：';
}
.cast:first-child::before{
  content: '演员：';
}
.cast:nth-child(n-1)::after,.director:nth-child(n-1)::after{
  content: ',';
}